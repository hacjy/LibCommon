<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_tablayout_line_height"
            android:background="@color/bottom_tablayout_line_background"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/bottom_tab"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_tablayout_height"
            android:layout_centerVertical="true"
            android:background="@color/bottom_tablayout_background"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/bottom_tablayout_tabIndicator_color"
            app:tabMode="fixed"
            app:tabIndicatorHeight="@dimen/bottom_tablayout_tabIndicator_height"
            app:tabSelectedTextColor="@color/bottom_tablayout_text_selected_color"
            app:tabTextColor="@color/bottom_tablayout_text_normal_color" />
    </LinearLayout>
</merge>